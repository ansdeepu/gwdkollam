
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile, editors can read all profiles
    match /users/{userId} {
      allow read: if request.auth.uid == userId
                  || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'editor';
      allow write: if request.auth.uid == userId
                   || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'editor';
    }

    // Rules for file entries
    match /fileEntries/{fileId} {
      // Editors and viewers can read all file entries
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['editor', 'viewer']
      // Site Managers can only read files they are assigned to
                  || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'site-manager'
                      && request.auth.uid in resource.data.assignedSupervisorUids);
                      
      // Only editors can create, update, or delete file entries
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'editor';
    }
    
    // Allow editors to manage staff
    match /staffMembers/{staffId} {
        allow read: if request.auth != null; // Allow any authenticated user to read staff list
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'editor';
    }
    
    // Allow editors to manage pending updates
    match /pendingUpdates/{updateId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'editor';
    }
    
    // Allow Site Managers to create pending updates
    match /pendingUpdates/{updateId} {
        allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'site-manager';
    }

    // Allow editors to manage GWD rates
    match /gwdRates/{rateId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'editor';
    }
  }
}
