rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions for auth roles
    function isEditor() {
      return request.auth.token.role == 'editor';
    }
    
    function isSupervisor() {
      return request.auth.token.role == 'supervisor';
    }
    
    function isViewer() {
      return request.auth.token.role == 'viewer';
    }

    function canReadCollection() {
      return isEditor() || isViewer();
    }
    
    function canWriteCollection() {
      return isEditor();
    }
    
    // /users/{userId}
    match /users/{userId} {
      allow read: if request.auth.uid == userId || canReadCollection();
      allow create; // Allow user creation
      allow update: if request.auth.uid == userId || isEditor(); // User can update own profile, admin can update any
      allow delete: if isEditor();
    }
    
    // /fileEntries/{docId}
    match /fileEntries/{docId} {
      // Editors/Viewers can read any file. Supervisors can only read files they are assigned to.
      allow get, list: if canReadCollection() || (isSupervisor() && resource.data.assignedSupervisorUids.hasAny([request.auth.uid]));
      allow create, update, delete: if canWriteCollection();
    }

    // /arsEntries/{docId}
    match /arsEntries/{docId} {
        allow get, list: if canReadCollection() || isSupervisor();
        allow create, update, delete: if canWriteCollection();
    }

    // /agencyApplications/{docId}
    match /agencyApplications/{docId} {
        allow get, list: if canReadCollection() || isSupervisor();
        allow create, update, delete: if canWriteCollection();
    }
    
    // /pendingUpdates/{docId}
    match /pendingUpdates/{docId} {
      allow create: if isSupervisor() || isEditor();
      allow read, update, delete: if isEditor();
    }
    
    // /staffMembers/{docId}
    match /staffMembers/{docId} {
      allow read: if request.auth != null;
      allow create, update, delete: if canWriteCollection();
    }

    // /notices/{docId}
    match /notices/{docId} {
        allow read: if request.auth != null;
        allow create, update, delete: if canWriteCollection();
    }
    
    // /gwdRates/{docId}
    match /gwdRates/{docId} {
        allow read: if request.auth != null;
        allow create, update, delete: if canWriteCollection();
    }
  }
}
